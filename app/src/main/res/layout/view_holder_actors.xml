<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_4x">

    <ImageView
        android:id="@+id/ivActorPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_2x"
        android:scaleType="centerCrop"
        android:contentDescription="@string/actor_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvActorName"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/robert_jr" />

    <TextView
        android:id="@+id/tvActorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        tools:text="@string/robert_downey_jr"
        android:textColor="@color/namesColor"
        app:layout_constraintEnd_toEndOf="@id/ivActorPhoto"
        app:layout_constraintStart_toStartOf="@+id/ivActorPhoto"
        app:layout_constraintTop_toBottomOf="@+id/ivActorPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>